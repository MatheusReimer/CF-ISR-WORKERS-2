{
	"name": "my-nuxt-app",
	"type": "module",
	"private": true,
	"scripts": {
		"build": "nuxt build",
		"dev": "nuxt dev",
		"generate": "nuxt generate",
		"preview": "npm run build && wrangler dev",
		"postinstall": "nuxt prepare",
		"deploy": "nuxt build && wrangler --cwd .output deploy",
		"cf-typegen": "wrangler types",
		"dev:cf": "wrangler dev --persist-to .wrangler --cwd .output",
		"dev:cf-2": "nuxt build && wrangler dev --remote --persist-to .wrangler --cwd .output"
	},
	"dependencies": {
		"nuxt": "^4.2.1",
		"vue": "^3.5.25",
		"vue-router": "^4.6.3"
	},
	"devDependencies": {
		"@nuxtjs/tailwindcss": "^6.14.0",
		"@tailwindcss/postcss": "^4.1.17",
		"autoprefixer": "^10.4.22",
		"nitro-cloudflare-dev": "^0.2.2",
		"nitropack": "^2.12.9",
		"postcss": "^8.5.6",
		"tailwindcss": "^3.4.18",
		"wrangler": "^4.51.0"
	}
}
